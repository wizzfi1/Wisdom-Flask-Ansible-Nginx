global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "/etc/prometheus/alert.rules.yml"

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]
  
  - job_name: "node_exporter"
    static_configs:
      - targets: ["localhost:9100"]
  
  - job_name: "flask_app"
    metrics_path: /metrics
    static_configs:
      - targets: ["localhost:8000"]